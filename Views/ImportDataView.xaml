<UserControl x:Class="CsvMapper.Views.ImportDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Import CSV and Schema" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="CSV File"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding SelectedCsvFilePath}" Width="300" IsReadOnly="True" Margin="0,5"/>
                <Button Content="Browse" Command="{Binding BrowseCsvFileCommand}" Margin="10,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Schema File" Margin="0,15,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding SelectedSchemaFilePath}" Width="300" IsReadOnly="True" Margin="0,5"/>
                <Button Content="Browse" Command="{Binding BrowseSchemaFileCommand}" Margin="10,0,0,0"/>
            </StackPanel>
            <Button Content="Load Schema" Command="{Binding LoadSchemaFileCommand}" Margin="0,15,0,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>