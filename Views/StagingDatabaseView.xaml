<UserControl x:Class="CsvMapper.Views.StagingDatabaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Staging Database" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="Server name"/>
            <TextBox Text="{Binding ServerName}" Margin="0,5"/>
            <TextBlock Text="Database name"/>
            <TextBox Text="{Binding DatabaseName}" Margin="0,5"/>
            <TextBlock Text="Authentication type"/>
            <ComboBox ItemsSource="{Binding AuthenticationTypes}" SelectedItem="{Binding SelectedAuthType}" Margin="0,5"/>
            <TextBlock Text="Username"/>
            <TextBox Text="{Binding Username}" Margin="0,5"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <Button Content="Connect" Command="{Binding ConnectCommand}" Margin="10" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>