<Window x:Class="CsvMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CsvMapper.Views"
        xmlns:vm="clr-namespace:CsvMapper.ViewModels"
        Title="Clinical Metadata Migration Tool"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="Staging Database">
                <views:StagingDatabaseView />
            </TabItem>
            <TabItem Header="Import Data">
                <views:ImportDataView />
            </TabItem>
            <TabItem Header="Map Data">
                <views:MappingView />
            </TabItem>
            <TabItem Header="Format Data" IsEnabled="False">
                <TextBlock Text="Coming soon..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Migration" IsEnabled="False">
                <TextBlock Text="Coming soon..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Dashboard" IsEnabled="False">
                <TextBlock Text="Coming soon..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>